@model List<ChoixResto.Models.Sondage>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liste des restaurants</title>
    <style type="text/css">
        table {
            border-collapse: collapse;
        }

        td, th {
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <p>Choississez un sondage</p>
    @if (Model.Count == 0)
    {
        <p>Pas de sondage pour l'instant</p>
    }
    else
    {
        <table>
            <tr>
                <th>Sondage id</th>
                <th>Partciper</th>
                <th>Résultats</th>
            </tr>
        @foreach (var sondage in Model)
        {
            <tr>
                <td> @sondage.Id</td>
                <td>
                    @Html.ActionLink(
                        linkText: "Participer",
                        actionName: "Index",
                        controllerName: "Vote",
                        routeValues: new { id = @sondage.Id },
                        htmlAttributes: null
                    )
                </td>
                <td>
                    @Html.ActionLink(
                        linkText: "Afficher résultats",
                        actionName: "AfficheResultat",
                        controllerName: "Vote",
                        routeValues: new { id = @sondage.Id },
                        htmlAttributes: null
                    )
                </td>
               
            </tr>
        }
    </table>
    }
    @Html.ActionLink(
        linkText: "Revenir à l'accueil",
        actionName: "Index",
        controllerName: "Home"
    )
</body>
</html>